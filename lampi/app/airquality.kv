#:kivy 2.3

<Card>:
    orientation: "vertical"
    size_hint_y: None
    height: dp(80)
    padding: dp(15)
    spacing: dp(5)
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # white background
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]
    # Sensor title label
    Label:
        text: root.sensor_title
        font_size: "18sp"
        bold: True
        color: 0.2, 0.2, 0.2, 1
    # Sensor reading label
    Label:
        text: root.sensor_reading
        font_size: "22sp"
        color: 0.3, 0.3, 0.3, 1

BoxLayout:
    orientation: "vertical"
    padding: dp(10)
    spacing: dp(10)
    # Optional subtle background for the whole layout
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 2
        spacing: dp(10)
        padding: [0, 0, dp(15), 0]  # Add right padding to match spacing visually
        row_default_height: dp(80)
        row_force_default: True
        col_default_width: (self.width - self.spacing[0]) / 2
        col_force_default: True

        Card:
            sensor_title: "PM 2.5"
            sensor_reading: f"{app.pm25} µg/m³"
        Card:
            sensor_title: "PM 10"
            sensor_reading: f"{app.pm10} µg/m³"
        Card:
            sensor_title: "Temp"
            sensor_reading: f"{app.temperature} °C"
        Card:
            sensor_title: "Humidity"
            sensor_reading: f"{app.humidity} %"
        Card:
            sensor_title: "Pressure"
            sensor_reading: f"{app.pressure} hPa"
        Card:
            sensor_title: "Altitude"
            sensor_reading: f"{app.altitude} m"

